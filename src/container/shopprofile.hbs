<main>
    <div class="row g-2">
        <div class="col-12">
            <div class="">
                <h2>{{header}}</h2>
                <div class="nav nav-tabs">
                    {{#each purchase.tabs}}
                    <div class="nav-item">
                        <a href="#" class="nav-link {{#if @first}}active{{/if}}">
                            {{this}}</a>
                    </div>
                    {{/each}}
                </div>
                <div class="col-12 mt-2 mb-2">
                    <div class="row g-2">
                        <div class="col-3 me-1">
                            <input class="form-control" type="text"
                                placeholder="{{purchase.actionBlock.input.placeholder}}">
                        </div>
                        <div class="nav col-8 g-2">
                            {{#each purchase.actionBlock.buttons}}
                            <a href="{{this.link}}"
                                class="me-2 {{#if isSuccess}}btn btn-success{{/if}} {{#if isOutline}}btn btn-outline-success{{/if}} {{#if isDanger}}btn btn-outline-danger{{/if}}">
                                {{this.text}}</a>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="col-12">
        <div class="row g-2">
            {{#each purchase.itemList}}
            <div class="col-4 p-1">{{this.number}}
                <h6>{{this.status}}</h6>
            </div>
            <div class="col-1">{{this.amount.title}}:
                <h6>{{this.amount.value}}</h6>
            </div>
            <div class="col-5">
                {{#each this.images}}
                <img src="{{this}}" alt="purchase image">
                {{/each}}
            </div>
            <div class="col-2"> <a href="{{this.button.link}}"
                    class="{{#if this.button.isPrimary}}btn btn-primary{{/if}}">{{this.button.text}}</a>
            </div>
            {{/each}}
        </div>
    </div>
    <hr>
    <section>
        {{#with userInfo}}
        <h2 class="mb-5">{{title}}</h2>
        <div class="card">
            {{#with profileData}}
            <h3 class="mt-2 ms-3">{{title}}</h3>
            <div class="row mt-3 ms-1 mb-2">
                {{#each fullName}}
                <div class="col-4">
                    <p class="text-muted">{{title}}</p>
                    <p>{{value}}</p>
                </div>
                {{/each}}
                {{#each otherInfo}}
                <div class="col-4 mt-1">
                    <p class="text-muted">{{title}}</p>
                    <p>{{value}}</p>
                </div>
                {{/each}}
                {{/with}}
            </div>
            <div class="row ms-1 mb-2">
                {{#each buttons}}
                <div class="col-4">
                    <a class="btn {{#if isPrimary}}btn-primary{{/if}} 
                        {{#if isSecondary}}btn-outline-secondary{{/if}}
                                {{#if isDanger}}btn-outline-danger{{/if}}" href="{{link}}">{{text}}</a>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="card p-2 my-2">
            {{#with recipients}}
            <h3>{{title}}</h3>
            <div class="row">
                {{#each users}}
                <div class="col-4">
                    <p>{{name}}</p>
                    <p class="text-muted">{{phone}}</p>
                    <a class="btn btn-primary" href="{{button.link}}">{{button.text}}</a>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
        <div class="card p-2 my-2">
            {{#with contacts}}
            <h3>{{title}}</h3>
            <div class="row">
                {{#each contactData}}
                <div class="col-4">
                    <p class="text-muted">{{title}}</p>
                    <p>{{value}}</p>
                </div>
                {{/each}}
                {{#each buttons}}
                <div class="col-4">
                    <a href="{{link}}" {{#if this.isPrimary}}class="btn btn-primary" {{/if}} {{#if
                        this.isSecondary}}class="btn btn-outline-secondary" {{/if}} {{#if
                        this.isDanger}}class="btn btn-outline-danger" {{/if}}>{{this.text}}</a>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
        {{/with}}
    </section>

    <hr>
</main>